<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BottomSheetTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>

        <!-- 하단바 흰색으로 변경 -->
        <item name="android:windowIsFloating">false</item>
        <!--        <item name="android:navigationBarColor">@color/color_main_bg_black</item>-->
        <!-- 상태바 투명 -->
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!-- 드래그 비활성화 -->
        <item name="behavior_draggable">true</item>
        <!-- 사용자의 액션에 의해 감춰질지 여부 -->
        <item name="behavior_hideable">false</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">100dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>